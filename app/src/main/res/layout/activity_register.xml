<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reg_logo"
                    android:layout_width="120dp"
                    android:layout_height="127dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="52dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/reg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tit_bold"
                    android:text="FOODLE"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="36sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tit_mid"
                android:text="회원가입"
                android:textColor="#000000"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_id"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_round"
                    android:ems="10"
                    android:fontFamily="@font/normal"
                    android:hint="아이디"
                    android:inputType="textPersonName"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_idck_chef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:background="#B5F1C40F"
                    android:fontFamily="@font/normal"
                    android:text="중복확인"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/light"
                android:text="4~12자의 영문, 숫자, 밑줄만 입력할 수 있습니다"
                android:textColor="#9E9E9E" />

            <TextView
                android:id="@+id/id_alert_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/light"
                android:textColor="#3F51B5" />

            <EditText
                android:id="@+id/join_name"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:fontFamily="@font/normal"
                android:hint="이름"
                android:background="@drawable/button_round"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/join_pwtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/sub_reg"
                android:text="비밀번호입력"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/join_pw"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/light"
                android:text="4~16자리로 비밀번호를 설정할 수 있습니다"
                android:textColor="#9E9E9E" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sub_reg"
                android:text="비밀번호확인"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/join_pwck_chef"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/join_nickname"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:fontFamily="@font/normal"
                android:hint="닉네임"
                android:background="@drawable/button_round"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/sub_reg"
                android:text="전화번호입력"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:ems="10"
                    android:fontFamily="@font/normal"
                    android:hint="인증 메시지 받을 전화번호"
                    android:background="@drawable/button_round"
                    android:inputType="phone"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_phck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#B5F1C40F"
                    android:fontFamily="@font/normal"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="인증번호발송" />
            </LinearLayout>

            <EditText
                android:id="@+id/join_phck"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:fontFamily="@font/normal"
                android:hint="인증번호를 입력하세요"
                android:background="@drawable/button_round"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/sub_reg"
                android:text="이메일입력"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_email"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:ems="10"
                    android:fontFamily="@font/normal"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/button_round"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_emck_chef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#B5F1C40F"
                    android:fontFamily="@font/normal"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="중복확인" />
            </LinearLayout>

            <TextView
                android:id="@+id/email_alert_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/light"
                android:textColor="#3F51B5" />

            <Button
                android:id="@+id/btn_register_chef"
                android:layout_width="410dp"
                android:layout_height="73dp"
                android:layout_marginTop="30dp"
                android:background="#F1C40F"
                android:fontFamily="@font/sub_reg"
                android:text="일반 USER 회원가입하기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold">

            </Button>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>